{
	"name": "@flect/guard",
	"version": "4.1.0",
	"description": "Typeguards for flect types",
	"keywords": [
		"typescript",
		"reification",
		"reflection",
		"node",
		"typeguard",
		"guard",
		"flect"
	],
	"dependencies": {
		"@flect/core": "*"
	},
	"module": "/dist/index.js",
	"exports": "./dist/index.js",
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"test-types": "tsc --noEmit -p ./test",
		"fix": "eslint . --fix && prettier . --write",
		"verify": ""
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "nx:run-script",
				"options": {
					"script": "build"
				},
				"dependsOn": [
					"^build",
					"fix"
				]
			},
			"fix": {
				"executor": "nx:run-script",
				"options": {
					"script": "fix"
				}
			},
			"test": {
				"executor": "nx:run-script",
				"options": {
					"script": "test"
				},
				"dependsOn": [
					"build"
				]
			},
			"test-types": {
				"executor": "nx:run-script",
				"options": {
					"script": "test-types"
				},
				"dependsOn": [
					"build"
				]
			},
			"verify": {
				"executor": "nx:noop",
				"options": {},
				"dependsOn": [
					"test",
					"test-types"
				]
			}
		}
	},
	"author": "David Durschlag",
	"repository": {
		"type": "git",
		"url": "https://github.com/ddurschlag/flect/"
	},
	"type": "module",
	"devDependencies": {
		"@babel/core": "^7.22.10",
		"@babel/preset-env": "^7.22.10",
		"@babel/preset-typescript": "^7.22.5",
		"@types/jest": "29.5.3",
		"@types/node": "^18.11.9",
		"babel-cli": "^6.26.0",
		"babel-jest": "^29.6.2",
		"esbuild": "^0.15.13",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"@typescript-eslint/eslint-plugin": "6.7.0",
		"@typescript-eslint/parser": "6.7.0",
		"jest": "29.6.2",
		"typescript": "5.1.6",
		"prettier": "3.0.3"
	},
	"files": [
		"dist/**/*",
		"flect.png"
	],
	"license": "MIT"
}
